@model Setting

<nav class="page-breadcrumb">
	<ol class="breadcrumb">
		<li class="breadcrumb-item">Dashboard</li>
		<li class="breadcrumb-item active" aria-current="page"><a href="">Settings</a></li>
	</ol>
</nav>


<div class="row">
	<div class="col-md-12 grid-margin stretch-card">
		<div class="card">
			<div class="card-body d-flex justify-content-between align-items-center">
				<div>
					<h4 class="font-weight-bold">User Settings</h4>
				</div>
				<a class="btn btn-sm btn-outline-warning px-4 text-decoration-none d-flex align-items-center" asp-action="Edit" asp-route-id="@Model.Id">
					<i data-feather="edit" class="mr-1 icon-md"></i> Edit
				</a>
			</div>
		
		</div>
	</div>
</div>

<div class="row">
	<div class="col-md-12 grid-margin">
		<div class="card">
			<div class="card-body">
				<div class="card-title">
				</div>
				<dl class="row">
					<dt class="col-sm-2">
						@Html.DisplayNameFor(model => model.NumberOfPosts)
					</dt>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => model.NumberOfPosts)
					</dd>
				</dl>

				<dl class="row">
					<dt class="col-sm-2">
						@Html.DisplayNameFor(model => model.NumberOfCompanies)
					</dt>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => model.NumberOfCompanies)
					</dd>
				</dl>

				<dl class="row">
					<dt class="col-sm-2">
						@Html.DisplayNameFor(model => model.Email)
					</dt>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => model.Email)
					</dd>
				</dl>

				<dl class="row">
					<dt class="col-sm-2">
						@Html.DisplayNameFor(model => model.PhoneNumber)
					</dt>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => model.PhoneNumber)
					</dd>
				</dl>

				<dl class="row">
					<dt class="col-sm-2">
						@Html.DisplayNameFor(model => model.TaxNumber)
					</dt>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => model.TaxNumber)
					</dd>
				</dl>
			</div>
		</div>
	</div>
</div>