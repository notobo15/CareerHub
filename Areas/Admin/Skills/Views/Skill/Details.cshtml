@model RecruitmentApp.Models.Skill

<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">Skills</li>
        <li class="breadcrumb-item active">Chi tiết</li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="font-weight-bold">Chi tiết kỹ năng</h4>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.SkillId)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.SkillId)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Name)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-sm btn-outline-secondary d-inline-flex align-items-center mr-2">
        <i data-feather="chevron-left" class="mr-1 icon-md"></i> Back to List
    </a>
    <a asp-action="Edit" asp-route-id="@Model.SkillId" class="btn btn-sm btn-outline-warning d-inline-flex align-items-center">
        <i data-feather="edit" class="mr-1 icon-md"></i> Edit
    </a>
</div>