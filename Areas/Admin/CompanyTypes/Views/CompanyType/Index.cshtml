@model IEnumerable<RecruitmentApp.Models.CompanyType>
@{
	var stt = 0;

}

<nav class="page-breadcrumb">
	<ol class="breadcrumb">
		<li class="breadcrumb-item">CompanyTypes</li>
		<li class="breadcrumb-item active" aria-current="page"><a href="">List</a></li>
	</ol>
</nav>


<div class="row">
	<div class="col-md-12 grid-margin stretch-card">
		<div class="card">
			<div class="card-body d-flex justify-content-between align-items-center">
				<div>
					<h4 class="font-weight-bold">@ViewData["Title"]</h4>
				</div>
				<a class="btn btn-sm btn-success px-4 text-white text-decoration-none d-flex align-items-center" asp-action="Create">
					<i class="mr-2 icon-md" data-feather="plus"></i>
					Tạo Mới
				</a>
			</div>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-md-12 grid-margin stretch-card">
		<div class="card">
			<div class="card-body">
				<div>
					<partial name="Admin/_SearchAndPageSizePartial" />
				</div>
				<table class="table table-bordered">
					<thead>
						<tr>
							<th>
								STT
							</th>
							<th>
								@Html.DisplayNameFor(model => model.CompanyTypeId)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.Name)
							</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>
									@(++stt)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.CompanyTypeId)
								</td>
								<td>
									<a asp-action="Details" asp-route-id="@item.CompanyTypeId">@Html.DisplayFor(modelItem => item.Name)</a>
								</td>
								<td class="text-center">
									<a class="btn btn-xs border-primary" asp-action="Details" asp-route-id="@item.CompanyTypeId"><i data-feather="eye" class="icon-sm text-primary"></i></a>
									<a class="btn btn-xs border-warning" asp-action="Edit" asp-route-id="@item.CompanyTypeId"><i data-feather="edit" class="icon-sm text-warning"></i></a>
									<a class="btn btn-xs border-danger" asp-action="Delete" asp-route-id="@item.CompanyTypeId"><i data-feather="trash-2" class="icon-sm text-danger"></i></a>
								</td>
							</tr>
						}
					</tbody>
				</table>

				<div class="mt-4">
					<partial name="Admin/_PaginationPartial" />
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<script>
		$(document).ready(function () {
			new DataTable('.table', {
				paging: false,
				searching: false,
				lengthChange: false,
				info: false,
				ordering: true
			});
		})

	</script>
}