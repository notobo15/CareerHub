@model SendCodeViewModel
@{
    ViewData["Title"] = "Gửi mã xác thực";
}
<div class="row mt-4">
    <div class="col-sm-6">

        <h2 class="text-center mb-4">@ViewData["Title"]</h2>

        <form asp-controller="Account" asp-action="SendCode" asp-route-returnurl="@Model.ReturnUrl" method="post" class="form-horizontal" role="form">
            <input asp-for="RememberMe" type="hidden" />
            <div class="">
                <div class="">
                    <h5>Mã xác thực gửi tới:</h5>
                    <select class="w-100" asp-for="SelectedProvider" asp-items="Model.Providers"></select>
                    <button type="submit" class="mt-4 p-2 w-100 btn btn-success btn-sm">Gửi</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
