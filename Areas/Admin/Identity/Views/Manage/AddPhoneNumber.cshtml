@model AddPhoneNumberViewModel
@{
    ViewData["Title"] = "Thêm số điện thoại";
}

<!-- Breadcrumb -->
<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">Tài khoản</li>
        <li class="breadcrumb-item active" aria-current="page">
            <a asp-action="AddPhoneNumber">Thêm số điện thoại</a>
        </li>
    </ol>
</nav>

<!-- Tiêu đề -->
<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="font-weight-bold">@ViewData["Title"]</h4>
                <p class="text-muted mt-2">
                    Nhập số điện thoại của bạn để nhận mã xác minh.
                </p>
            </div>
        </div>
    </div>
</div>

<!-- Form thêm số điện thoại -->
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="col-md-6">
                    <form asp-controller="Manage" asp-action="AddPhoneNumber" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="form-label"></label>
                            <input asp-for="PhoneNumber" class="form-control phone-input" />
                            <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                        </div>

                        <div class="form-group d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-primary d-inline-flex align-items-center">
                                <i data-feather="send" class="me-1 icon-md"></i> Gửi mã
                            </button>
                            <a asp-action="Index" asp-controller="Manage" class="btn btn-outline-secondary d-inline-flex align-items-center">
                                <i data-feather="x" class="me-1 icon-md"></i> Huỷ
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quay về -->
<a asp-action="Index" asp-controller="Manage" class="btn btn-sm btn-outline-secondary d-inline-flex align-items-center mt-3">
    <i data-feather="chevron-left" class="me-1 icon-md"></i> Quay về trang tài khoản
</a>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        feather.replace();

        // Optional: mask số điện thoại
        Inputmask({"mask": "(999) 999-9999"}).mask('.phone-input');
    </script>
}
