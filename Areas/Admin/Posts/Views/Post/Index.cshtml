@model IEnumerable<RecruitmentApp.Models.Post>
@{
	ViewData["Title"] = "Quản lý bài tuyển dụng";
	var stt = 0;
}

<nav class="page-breadcrumb">
	<ol class="breadcrumb">
		<li class="breadcrumb-item">Posts</li>
		<li class="breadcrumb-item active" aria-current="page">Danh sách</li>
	</ol>
</nav>

@if (ViewBag.Message != null)
{
	<div class="alert alert-success alert-dismissible fade show" role="alert">
		@ViewBag.Message
		<button type="button" class="close" data-dismiss="alert" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
	</div>
}

<div class="row">
	<div class="col-md-12 grid-margin stretch-card">
		<div class="card">
			<div class="card-body d-flex justify-content-between align-items-center">
				<h4 class="font-weight-bold">@ViewData["Title"]</h4>
				<a class="btn btn-sm btn-success d-flex align-items-center" asp-action="Create">
					<i data-feather="plus" class="mr-2 icon-md"></i> Tạo mới
				</a>
			</div>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-md-12 grid-margin stretch-card">
		<div class="card">
			<div class="card-body">
				<table class="table table-bordered table-hover">
					<thead>
						<tr>
							<th>#</th>
							<th>@Html.DisplayNameFor(model => model.First().Title)</th>
							<th>@Html.DisplayNameFor(model => model.First().IsHot)</th>
							<th>@Html.DisplayNameFor(model => model.First().ViewTotal)</th>
							<th>@Html.DisplayNameFor(model => model.First().PostDate)</th>
							<th>@Html.DisplayNameFor(model => model.IsShow)</th>
							<th class="text-center">Hành động</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>@(++stt)</td>
								<td>@Html.DisplayFor(modelItem => item.Title)</td>
								<td>@Html.DisplayFor(modelItem => item.IsHot)</td>
								<td>@Html.DisplayFor(modelItem => item.ViewTotal)</td>
								<td>@Html.DisplayFor(modelItem => item.PostDate)</td>
								<td>
									

								</td>
								<td class="text-center">
									<a class="btn btn-xs border-info" asp-action="Applicants" asp-route-id="@item.PostId" title="Danh sách ứng viên">
										<i data-feather="users" class="icon-sm text-info"></i>
									</a>
									<a class="btn btn-xs border-primary" asp-action="Details" asp-route-id="@item.PostId">
										<i data-feather="eye" class="icon-sm text-primary"></i>
									</a>
									<a class="btn btn-xs border-warning" asp-action="Edit" asp-route-id="@item.PostId">
										<i data-feather="edit" class="icon-sm text-warning"></i>
									</a>
									<a class="btn btn-xs border-danger" asp-action="Delete" asp-route-id="@item.PostId">
										<i data-feather="trash-2" class="icon-sm text-danger"></i>
									</a>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<script>
		$(document).ready(function () {
			$('.table').DataTable();
		});
	</script>
}
