@model RecruitmentApp.Models.Post
@{
    ViewData["Title"] = "Xóa bài đăng";
}

<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">Posts</li>
        <li class="breadcrumb-item active" aria-current="page"><a href="">Delete</a></li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="font-weight-bold text-danger">Xác nhận xóa</h4>
                <p>Bạn có chắc chắn muốn xóa bài đăng này không?</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Title)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(m => m.Title)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.IsHot)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(m => m.IsHot)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.ViewTotal)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(m => m.ViewTotal)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.MinSalary)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(m => m.MinSalary)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.MaxSalary)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(m => m.MaxSalary)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.PostDate)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(m => m.PostDate)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.WorkSpace)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(m => m.WorkSpace)</dd>
                </dl>

                <form asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="PostId" />
                    <div class="form-group d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-danger d-inline-flex align-items-center mr-2">
                            <i data-feather="trash-2" class="mr-1 icon-md"></i> Xóa
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary d-inline-flex align-items-center">
                            <i data-feather="x" class="mr-1 icon-md"></i> Hủy
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
