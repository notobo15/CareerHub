@model RecruitmentApp.Models.WorkType

@{
    ViewData["Title"] = "Chi tiết hình thức làm việc";
}

<!-- Breadcrumb -->
<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">Hình thức làm việc</li>
        <li class="breadcrumb-item active" aria-current="page">Chi tiết</li>
    </ol>
</nav>

<!-- Tiêu đề -->
<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="font-weight-bold mb-0">
                    Chi tiết Hình thức làm việc
                    <span class="text-muted">#@Model.WorkTypeId</span>
                </h4>
            </div>
        </div>
    </div>
</div>

<!-- Thông tin -->
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.WorkTypeId)</dt>
                    <dd class="col-sm-9">@Model.WorkTypeId</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Name)</dt>
                    <dd class="col-sm-9">@Model.Name</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Slug)</dt>
                    <dd class="col-sm-9">@Model.Slug</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<!-- Actions -->
<div class="mt-4">
    <a asp-action="Index" class="btn btn-sm btn-outline-secondary d-inline-flex align-items-center">
        <i data-feather="arrow-left" class="me-1 icon-md"></i> Quay lại
    </a>
    <a asp-action="Edit" asp-route-id="@Model.WorkTypeId" class="btn btn-sm btn-outline-warning d-inline-flex align-items-center mx-2">
        <i data-feather="edit" class="me-1 icon-md"></i> Sửa
    </a>
    <a asp-action="Delete" asp-route-id="@Model.WorkTypeId" class="btn btn-sm btn-outline-danger d-inline-flex align-items-center">
        <i data-feather="trash-2" class="me-1 icon-md"></i> Xoá
    </a>
</div>

@section Scripts {
    <script>feather.replace();</script>
}
