@model RecruitmentApp.Models.Company

@{
    ViewData["Title"] = "Xóa công ty";
}

<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">Companies</li>
        <li class="breadcrumb-item active" aria-current="page">Xóa</li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card border-danger">
            <div class="card-body">
                <h4 class="text-danger font-weight-bold">Xác nhận xóa</h4>
                <p>Bạn có chắc chắn muốn xóa công ty này không?</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Slug)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(m => m.Slug)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Name)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(m => m.Name)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Phone)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(m => m.Phone)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Email)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(m => m.Email)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Type)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(m => m.Type)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Nation)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(m => m.Nation)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.OverTime)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(m => m.OverTime)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.WorkingTime)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(m => m.WorkingTime)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.LogoImage)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(m => m.LogoImage)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.CompanyUrl)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(m => m.CompanyUrl)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.CompanyFbUrl)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(m => m.CompanyFbUrl)</dd>
                </dl>

                <form asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="CompanyId" />
                    <div class="form-group d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-danger d-inline-flex align-items-center mr-2">
                            <i data-feather="trash-2" class="mr-1 icon-md"></i> Xóa
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary d-inline-flex align-items-center">
                            <i data-feather="x" class="mr-1 icon-md"></i> Hủy
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
