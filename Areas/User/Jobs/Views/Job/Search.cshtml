					$(this).addClass("selected-job");

					let postId = $(this).data("postid");
					let selectedPost = posts.find(p => p.postId == postId);
					$.ajax({
						url: "/jobs/detail", // Controller xử lý
						type: "GET",
						data: { postId: postId },
						success: function (result) {
							$("#job-detail-container").html(result);
