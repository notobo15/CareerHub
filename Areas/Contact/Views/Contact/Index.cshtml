@model IEnumerable<RecruitmentApp.Models.Contact>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateSend)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateSend)
            </td>
            <td class="text-center">
                <a class="btn btn-sm border-primary" asp-action="Details" asp-route-id="@item.Id"><i class="far fa-eye text-primary"></i></a>
                <a class="btn btn-sm border-warning" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit text-warning"></i></a>
                <a class="btn btn-sm border-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash-alt text-danger"></i></a>
            </td>
        
        </tr>
}
    </tbody>
</table>
@section Scripts {
    <script>
        $(document).ready(function () {
            new DataTable('.table').dataTable({
            });
        })

    </script>
}