@model RecruitmentApp.Models.Post

@{
    ViewData["Title"] = "Chi tiết bài đăng";
}

<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">Posts</li>
        <li class="breadcrumb-item active" aria-current="page">Chi tiết</li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="font-weight-bold">Chi tiết bài đăng</h4>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Title)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(m => m.Title)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.IsHot)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(m => m.IsHot)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.ViewTotal)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(m => m.ViewTotal)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Salary)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(m => m.Salary)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.PostDate)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(m => m.PostDate)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.WorkSpace)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(m => m.WorkSpace)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Description)</dt>
                    <dd class="col-sm-10">@Html.Raw(Model.Description)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.JobRequirement)</dt>
                    <dd class="col-sm-10">@Html.Raw(Model.JobRequirement)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Benefit)</dt>
                    <dd class="col-sm-10">@Html.Raw(Model.Benefit)</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-sm btn-outline-secondary d-inline-flex align-items-center mr-2">
        <i data-feather="chevron-left" class="mr-1 icon-md"></i> Quay lại
    </a>
    <a asp-action="Edit" asp-route-id="@Model.PostId" class="btn btn-sm btn-outline-warning d-inline-flex align-items-center">
        <i data-feather="edit" class="mr-1 icon-md"></i> Chỉnh sửa
    </a>
</div>
