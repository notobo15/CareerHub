@using Microsoft.AspNetCore.Identity
@using RecruitmentApp.Models

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@{
    ViewData["Title"] = "Home Page";
    var companies = ViewData["companies"] as List<Company>;
    var posts = ViewData["posts"] as List<Post>;

    var levels = ViewData["levels"] as List<Level>;
    SelectList list = new SelectList(levels, "LevelId", "Name");

    var provices = ViewData["provices"] as List<Province>;
    var listProvices = new SelectList(provices, "Code", "FullName");
    // bool val1 = 
}

<style>
    .select2-container--bootstrap4 .select2-dropdown .select2-results__option[aria-selected="true"] {
        background: #ccc;
    }
    .select2-container--bootstrap4 {
        width: 100% !important;
        
    }


    @@media (min-width: 1200px) {
        .home-search {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            z-index: 1;
            left: 5%;
            background: rgba(255, 255, 255, 0.7);
            width: 35%;
            }    
        
    }
   
</style>

@section Search {
    <partial name="_StatusMessage" />
    <!-- Slider main container -->
    <div class="position-relative">
        <div class="swiper ">
            <!-- Additional required wrapper -->
            <div class="swiper-wrapper">
                <!-- Slides -->
                <div class="swiper-slide"><img class="w-100" src="~/files/background-1.webp" /></div>
                <div class="swiper-slide"><img class="w-100" src="~/files/background-2.webp" /></div>
                <div class="swiper-slide"><img class="w-100" src="~/files/background-3.webp" /></div>
                <div class="swiper-slide"><img class="w-100" src="~/files/background-4.webp" /></div>
            </div>
            <!-- If we need pagination -->
            <div class="swiper-pagination"></div>

            <!-- If we need navigation buttons 
            <div class="swiper-button-prev"></div>
            <div class="swiper-button-next"></div>
            -->
        </div>
        <div class="home-search container rounded border my-4 my-lg-0">
            <div class="p-3">
                <h5>
                    Đón lấy thành công với
                </h5>
                <h4> <b class="font-weight-bold">18,523</b> cơ hội nghề nghiệp</h4>
                <form asp-action="Search" method="get">

                    <div class="form-group">
                        <input name="key" type="text" placeholder="kỹ năng, chức vụ, công ty..." class="form-control w-100">
                    </div>
                    <div class="form-group">
                        <select name="city" class="city" asp-items="listProvices">
                            <option value="-1">--- Chọn Tỉnh Thành(Tất Cả) ---</option>
                        </select>
                    </div>

                   
                    <div class="form-group">
                        <button type="submit" class="w-100 btn btn-primary"><b>TÌM NGAY</b></button>

                    </div>
                  
                  
                </form>
            </div>
        </div>
   </div>
   
}
<div class="container">
    <h2 class="text-center py-4">Nhà Tuyển Dụng Hàng Đầu</h2>
    <div class="row justify-content-around">
        @{
            foreach (var com in companies)
            {
                <div class="col-sm-6 col-lg-4 mb-4" style="min-height: 340px">
                    <div class="card shadow h-100" >
                        <a asp-route-id="@com.Slug" asp-action="ViewCompany" class="card-img p-2">
