                                <h5 class="card-text">@com.Name</h5>
                            </a>
                            <p>Ha Noi - Ho Chi Minh</p>
                            <div class="my-3">
                                @if (com.CompanySkills.Any())
                                {

                                    foreach (var t in com.CompanySkills)
                                    {
                                        <span class="badge p-2 rounded-pill bg-light border m-1">@t.Skill.Name</span>
                                    }
                                }
                            </div>
                            <a asp-action="ViewCompany" asp-route-id="@com.Slug" class="w-100 d-block text-primary text-center">@com.Posts.Count Việc làm</a>
                        </div>
                    </div>
                </div>

            }
